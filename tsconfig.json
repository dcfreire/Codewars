{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": true,
        "lib": ["es2020", "DOM"]
    },
    "include": [
        "typescript/**/*"
    ],
    "exclude": [
        "typescript/**/__tests__/*"
    ],
    "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
    ]
}